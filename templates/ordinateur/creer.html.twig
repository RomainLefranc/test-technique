{% extends 'base.html.twig' %}

{% block title %}
    Ordinateur - {% if editMode %}Modifier{% else %}Créer{% endif %}
{% endblock %}

{% block body %}
    <div class="mt-2">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Accueil</a></li>
                <li class="breadcrumb-item"><a href="/ordinateur">Ordinateur</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                {% if editMode %}
                    Modifier
                {% else %}
                    Créer
                {% endif %}
                </li>
            </ol>
        </nav>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-3 col-lg-5 col-md-6">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                {{form_start(form)}}
                                {{form_row(form.modele)}}
                                <button type="submit" class="btn btn-success">
                                    {% if editMode %}
                                        Modifier
                                    {% else %}
                                        Ajouter
                                    {% endif %}
                                </button>
                                {{form_end(form)}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}